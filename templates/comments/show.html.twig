{% set username = comment.user.username %}
<div class="comment mb-5" id="comment-{{ comment.id }}">
    <div class="card">
        <div class="card-body">

            <h5 class="card-title">

                <a href="" class="text-decoration-none">
                    <span class="comment-author">{{username}}</span>
                </a> 
            </h5>

            <p class="card-text mt-2 mb-2" style="font-size: 16px;">
                {{ comment.content }}
            </p>
            <span style="font-size: 14px; color: gray;">{{ comment.createdAt|date('d M Y Ã  H:i:s') }}</span>
        </div>
    </div>
</div>

