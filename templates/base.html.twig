<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    </head>
    <body>
        <nav class="py-1 border-bottom" style="background: #2f6690">
            <div class="container-sm d-flex flex-wrap">

                <div class="dropdown">
                    <a class="text-white nav nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Mon blog
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButtonAdminDashboard">
                      <a class="dropdown-item" href={{path('admin')}}>Tableau de bord</a>
                      <a class="dropdown-item" href="#">Menus</a>
                    </div>
                </div>

                <div class="dropdown">
                    <a class="text-white nav nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Ajouter
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButtonAdminAdd">
                      <a class="dropdown-item" href="#">Article</a>
                      <a class="dropdown-item" href="#">Page</a>
                    </div>
                </div>
            </div>    
        </nav>

        <div class="container">
            <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
                <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none" href={{path('app_home')}}>
                    <span class="fs-4">
                        TechMania
                    </span>
                </a>
                <ul class="nav nav-pills">
                    <li class="nav-item">
                      <a class="nav-link text-dark" href="#">Se connecter</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link text-dark" href="#">S'inscrire</a>
                    </li>
                </ul>
            </header>
        </div>

        {% block body %}{% endblock %}

        <div class="container">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
                <div class="col-md-4 d-flex align-items-center">
                    <span class="copyright">
                        © {{'now'|date('Y')}}TechMania. Tous droits réservés.
                    </span>
                </div>
            </footer>
        </div>

    </body>
</html>
